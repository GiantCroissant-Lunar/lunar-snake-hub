{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://lunar-snake-hub/schemas/secrets.json",
  "title": "Lunar Snake Hub Secrets",
  "description": "Sensitive credentials for lunar-snake-hub infrastructure (should be encrypted with SOPS)",
  "type": "object",
  "required": ["GLM", "Services"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "GLM": {
      "type": "object",
      "required": ["ApiKey"],
      "properties": {
        "ApiKey": {
          "type": "string",
          "description": "GLM API key (JWT token)",
          "minLength": 32
        }
      }
    },
    "Services": {
      "type": "object",
      "required": ["Gateway", "N8n"],
      "properties": {
        "Gateway": {
          "type": "object",
          "required": ["Token"],
          "properties": {
            "Token": {
              "type": "string",
              "description": "Gateway authentication token",
              "minLength": 32
            }
          }
        },
        "N8n": {
          "type": "object",
          "required": ["Password"],
          "properties": {
            "Password": {
              "type": "string",
              "description": "n8n admin password",
              "minLength": 12
            }
          }
        }
      }
    },
    "GitHub": {
      "type": "object",
      "properties": {
        "PersonalAccessToken": {
          "type": "string",
          "description": "GitHub Personal Access Token (optional)"
        },
        "WebhookSecret": {
          "type": "string",
          "description": "GitHub webhook secret (optional)"
        }
      }
    }
  }
}
